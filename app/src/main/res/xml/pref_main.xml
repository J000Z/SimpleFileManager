<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="General"
        android:key="pref_key_general_settings">
        <CheckBoxPreference
            android:key="pref_key_show_hidden_files"
            android:title="Show hidden files"
            android:defaultValue="true" />
    </PreferenceCategory>
    <PreferenceCategory
        android:title="Sort"
        android:key="pref_key_sort_settings">
        <ListPreference
            android:key="pref_key_sort_by"
            android:title="Sort by"
            android:defaultValue="0"
            android:entries="@array/pref_sort_by_list_titles"
            android:entryValues="@array/pref_sort_by_list_values"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null" />
        <ListPreference
            android:key="pref_key_sort_order"
            android:title="Order"
            android:defaultValue="0"
            android:entries="@array/pref_sort_order_list_titles"
            android:entryValues="@array/pref_sort_order_list_values"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null" />
    </PreferenceCategory>
    <PreferenceCategory
        android:title="Open with"
        android:key="pref_key_open_with_settings">
        <Preference android:title="Application preference"
                    android:id="@+id/Application_preference">
            <intent android:action="android.intent.action.view"
                    android:targetPackage="com.hq.simplefilemanager"
                    android:targetClass="com.hq.simplefilemanager.typeListActivity"/>
        </Preference>
    </PreferenceCategory>

</PreferenceScreen>